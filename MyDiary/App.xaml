<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyDiary"
             x:Class="MyDiary.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="BackgraundColor">#87CEFA</Color>
            <Color x:Key="BackgraundColorButton">#000080</Color>
            <Color x:Key="TextColorLabel">Black</Color>
            <Color x:Key="TextColorButton">White</Color>
            <x:Double x:Key="FontSize1">30</x:Double>
            <x:Double x:Key="FontSize2">24</x:Double>
            <x:String x:Key="FontFamily">Arial</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
